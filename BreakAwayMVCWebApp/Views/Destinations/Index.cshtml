@model IPagedList<Destination>

@{
    ViewData["Title"] = "Index";
}

@using X.PagedList;
@using X.PagedList.Mvc;
@using X.PagedList.Mvc.Core

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].DestinationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DestinationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DestinationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DestinationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DestinationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@Html.PagedListPager( (IPagedList)Model, page => Url.Action("Index", new { page }) )
